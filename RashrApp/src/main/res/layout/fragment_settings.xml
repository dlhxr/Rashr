<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical"
    tools:context=".SettingsFragment">

    <Button
        android:id="@+id/bReport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/report"
        android:layout_weight="1" />

    <Button
        android:id="@+id/bShowLogs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/showlog"
        android:layout_weight="1" />

    <Button
        android:id="@+id/bClearCache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sClearCache"
        android:layout_weight="1" />

    <CheckBox
        android:id="@+id/cbShowAds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ShowAds"
        android:gravity="center"
        android:layout_weight="1" />

    <CheckBox
        android:id="@+id/cbLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/log"
        android:gravity="center"
        android:layout_weight="1" />

    <CheckBox
        android:id="@+id/cbDarkUI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/UseDarkUI"
        android:gravity="center"
        android:layout_weight="1" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/changelog"
        android:id="@+id/bShowChangelog"
        android:layout_weight="1" />

    <Button
        android:id="@+id/bReset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/reset_app"
        android:layout_weight="1" />
</LinearLayout>
